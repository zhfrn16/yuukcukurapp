<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mask_group"
        android:layout_width="241.21dp"
        android:layout_height="241.21dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="85dp"
        android:background="@drawable/imglogobaber"
        android:elevation="40dp"
        app:layout_constraintBottom_toTopOf="@+id/treatment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menu_2"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="41dp"
        android:background="@drawable/imgpotongpijatharga"
        app:layout_constraintBottom_toTopOf="@+id/menu_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_1"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/menu_3"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/imgpotongpijatcuciharga"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_2"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/menu_1"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="41dp"
        android:background="@drawable/imgpotongrambutharga"
        app:layout_constraintBottom_toTopOf="@+id/menu_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/treatment"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/treatment"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="106dp"
        android:background="@drawable/imgtreatment"
        android:gravity="center_horizontal|top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mask_group" />


</androidx.constraintlayout.widget.ConstraintLayout>